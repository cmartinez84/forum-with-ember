<div class="well">
        <h3>Edit Question</h3>
    <div class="row">
        <div class="col-sm-4">
            <label for=""></label>
            {{input value=question.title id="editTitle" class="form-control"}}
            <label for="">Author</label>
            {{input value=question.author id="editAuthor" class="form-control"}}
            <label for="">Avatar</label>
            {{input value=question.avatar id="editAvatar" class="form-control"}}
        </div>
        <div class="col-sm-8">
            <label for="">Content</label>
            {{textarea value=question.content id="editContent" class="form-control"}}
        </div>
    </div>
    <button type="button" name="button" class="btn btn-success form-control" {{action "update" question}} > Save</button>
</div>
